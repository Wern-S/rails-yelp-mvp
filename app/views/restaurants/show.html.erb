<h1> <%= @restaurant.name %> - <%= @restaurant.address %></h1>
<h2> <%= @restaurant.category %></h2>
<% @restaurant.reviews.each do |review| %>
    <p> <%= review.content %>
    <%= review.rating %> </p>
    <% end %>

<p> <%= link_to 'Review it!', new_restaurant_review_path(@restaurant) %></p>

<p> <%= link_to 'Back to list', restaurants_path %></p>

