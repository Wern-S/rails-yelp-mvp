<div class="container">
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <%= f.input :content %>

  <%= f.input :rating %>

  <%= f.button :submit, class: "btn-primary" %>
  <% end %>

  <p class="btn btn-danger mt-3"> <%= link_to 'Cancel', restaurant_path(@restaurant) %> </p>
</div>

